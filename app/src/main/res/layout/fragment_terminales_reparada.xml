<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gris_fondo"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/azul_claro_nav_bar">

            <Button
                android:id="@+id/btn_terminales_diagnostico"
                style="@style/letra_tabs"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:background="#802196F5"
                android:onClick="verTerminalesDiasnostico"
                android:scrollbars="vertical"
                android:text="Terminales diagnostico" />

            <Button
                android:id="@+id/btn_terminales_reparadas"
                style="@style/letra_tabs"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:background="@color/azul_claro_nav_bar"
                android:onClick="verTerminalesReparadas"
                android:scrollbars="vertical"
                android:text="Terminales reparadas" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <EditText
                    android:id="@+id/serial"
                    android:layout_width="150dp"
                    android:layout_height="35dp"
                    android:background="@drawable/redondo_gris"
                    android:hint="Serial"
                    android:paddingLeft="5dp"
                    android:inputType="text" />

                <Button
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    android:id="@+id/btn_cambiar_clave"
                    android:text="Buscar por serial"
                    android:textAllCaps="false"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/redondo_azul"
                    style="@style/letra_botones"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <EditText
                    android:id="@+id/txt_fecha_inicio"
                    android:layout_width="150dp"
                    android:layout_height="35dp"
                    android:background="@drawable/redondo_gris"
                    android:hint="Fecha inicial"
                    android:paddingLeft="5dp"
                    android:inputType="date"
                    android:focusable="false"
                    android:clickable="true"
                    android:maxLines="1"/>

                <ImageButton
                    android:id="@+id/btn_fecha_inicio"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/ic_calendar"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <EditText
                    android:id="@+id/txt_fecha_fin"
                    android:layout_width="150dp"
                    android:layout_height="35dp"
                    android:background="@drawable/redondo_gris"
                    android:hint="Fecha inicial"
                    android:paddingLeft="5dp"
                    android:inputType="date"
                    android:focusable="false"
                    android:clickable="true"
                    android:maxLines="1"/>

                <ImageButton
                    android:id="@+id/btn_fecha_fin"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/ic_calendar"
                    />
            </LinearLayout>


        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view_consultaTerminales"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp" />
    </LinearLayout>
</FrameLayout>