<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gris_fondo"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Consulta de terminales por serial"
                android:gravity="center_horizontal"
                android:layout_marginTop="10dp"
                style="@style/letra_titulos"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:gravity="center_horizontal">

                <AutoCompleteTextView
                    android:layout_width="200dp"
                    android:layout_height="35dp"
                    android:background="@drawable/redondo_gris"
                    android:id="@+id/serial"
                    android:hint="Serial"
                    android:paddingLeft="5dp"
                    android:inputType="text"
                    style="@style/letra_contenido"
                    />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lbl_busq_serial"
                android:padding="10dp"
                style="@style/letra_contenido"/>


        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view_consultaTerminales_serial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp" />
    </LinearLayout>
</FrameLayout>